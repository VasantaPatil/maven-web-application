pipeline{
    agent any
    
 tools {
  maven 'maven'  
}
    stages {
        stage('git-checkout') {
            steps {
         git credentialsId: 'github', url: 'https://github.com/VasantaPatil/maven-web-application.git'
            }  
        }

         stage ('maven-build') {
            steps {
                sh "mvn clean package"
             }
        }
         stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube analysis...'
                withSonarQubeEnv('sonarqube') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=maven_web_application'
                }
          } 
      } 
        stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
        }
        stage ('nexus-artifact') {
            steps {
                nexusArtifactUploader artifacts: [[artifactId: 'maven-web-application', classifier: '', file: 'target/maven-web-application.war', type: 'war']], credentialsId: 'nexus', groupId: 'com.mt', nexusUrl: '54.144.117.41:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'KuberST', version: '0.0.1-SNAPSHOT'
                    }
            }
       stage ('docker-build'){
           steps {
               sh 'docker build -t vasantapatil/maven-web-application:$BUILD_NUMBER .'
           } 
        }   
        stage('docker push to dokcer hub'){
            steps {
                sh "docker login -u vasantapatil -p Vasupatil@7"
                sh 'docker push vasantapatil/maven-web-application:$BUILD_NUMBER'
            }
        }
      stage('depoly as container'){
            steps {
                sh "docker run -d --name project -p 9091:8080 vasantapatil/maven-web-application:$BUILD_NUMBER"
            }
        }
    }
}
